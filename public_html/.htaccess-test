#
# PHP settings
#
php_value include_path ".:/home/rolfeb/public_html/test/c:/home/rolfeb/PEAR:/home/rolfeb:/home/rolfeb/pear/PEAR"
php_value date.timezone "Australia/NSW"

#
# Configuration parameters
#
SetEnv BASE_PATH                "/home/rolfeb/public_html/test"
SetEnv NSWRAIL_CONFIG_FILE      "/home/rolfeb/config/test.nswrail.net.json"

#
# URL rewriting
#
RewriteEngine on
RewriteBase /

# Uncomment for HTTPS
## RewriteCond %{HTTPS} !=on
## RewriteRule ^/?(.*)         https://%{SERVER_NAME}/$1 [R,L]

# .txt files are passed through the BBCode parser
RewriteRule ^(.*).txt$      /c/txtpage.php?file=$1.txt [L]

# redirect invalid URLs
RewriteRule ^index.html$    / [R]

#
# Other settings
#
DirectoryIndex index.php

#
# Permissions
#
Order allow,deny

<FilesMatch "^$">
    Allow from all
    Header set Cache-Control no-store
</FilesMatch>

<FilesMatch "\.(gif|png|jpg|svg|css|map|js|ico)$">
    Allow from all
    Header set Cache-Control max-age=1440,must-revalidate
</FilesMatch>

<FilesMatch "\.(php|txt|html)$">
    Allow from all
    Header set Cache-Control no-store
</FilesMatch>

